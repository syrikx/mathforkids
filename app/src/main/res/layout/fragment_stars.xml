            android:id="@+id/star8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@{viewModel.starsList[7] ? @drawable/filled_star : @drawable/empty_star}" />
        <ImageView
            android:id="@+id/star7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@{viewModel.starsList[6] ? @drawable/filled_star : @drawable/empty_star}" />
        <ImageView
            android:id="@+id/star6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@{viewModel.starsList[5] ? @drawable/filled_star : @drawable/empty_star}" />
        <ImageView
            android:id="@+id/star5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@{viewModel.starsList[4] ? @drawable/filled_star : @drawable/empty_star}" />
        <ImageView
            android:id="@+id/star4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@{viewModel.starsList[3] ? @drawable/filled_star : @drawable/empty_star}" />
        <ImageView
            android:id="@+id/star3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@{viewModel.starsList[2] ? @drawable/filled_star : @drawable/empty_star}" />
        <ImageView
            android:id="@+id/star2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@{viewModel.starsList[1] ? @drawable/filled_star : @drawable/empty_star}" />
        <ImageView
            android:id="@+id/star1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@{viewModel.starsList[0] ? @drawable/filled_star : @drawable/empty_star}" />
    </LinearLayout>
</layout>

